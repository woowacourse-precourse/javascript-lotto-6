{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["airbnb-base"],
    "plugins": ["prettier"],
    "overrides": [
        {
            "files": ["*/__tests__/**/*.js"],
            "rules": {
                "max-lines-per-function": "off",
                "max-depth": "off",
                "no-new": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error"],
        "max-lines-per-function": ["error", { "max": 15 }],
        "class-methods-use-this": "off",
        "max-depth": ["error", 2],
        "import/extensions": "off"
    }
}

